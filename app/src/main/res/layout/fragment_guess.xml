<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="zb.club.slounikzzubrykam.GuessGame">

        <ProgressBar
            android:id="@+id/progressBarInGuess"
            style="@style/CircularDeterminateProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:max="7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:progress="60" />

        <TextView
            android:id="@+id/countGues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alice"
            app:layout_constraintBottom_toBottomOf="@+id/progressBarInGuess"
            app:layout_constraintEnd_toEndOf="@+id/progressBarInGuess"
            app:layout_constraintStart_toStartOf="@+id/progressBarInGuess"
            app:layout_constraintTop_toTopOf="@+id/progressBarInGuess"
            tools:text="1/7" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerGuess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonGuessWord"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBarInGuess" />



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationViewConfetti"
            android:layout_width="348dp"
            android:layout_height="256dp"
            android:visibility="invisible"

            app:layout_constraintBottom_toBottomOf="@+id/buttonInvite"
            app:layout_constraintEnd_toEndOf="@+id/buttonInvite"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="@+id/buttonInvite"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/anim_confettie" />

        <Button
            android:id="@+id/buttonInvite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_butons"
            android:text="&quot;ЗАПРАСІЦЬ ДА ЗУБРЫКА СЯБРА!&quot;"
            android:visibility="invisible"
            android:fontFamily="@font/alice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonGuessWord"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_butons"
            android:fontFamily="@font/alice"
            app:icon="@drawable/ic_baseline_volume_up_wight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerGuess" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>